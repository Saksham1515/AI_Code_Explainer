####
dot code:

digraph G {
    node [shape=box];

    start [label="Start", shape=circle];
    generate_matrix [label="Generate Matrix", shape=box];
    random_solution [label="Generate Random Solution", shape=box];
    calculate_path_length [label="Calculate Path Length", shape=box];
    find_neighbors [label="Find Neighbors", shape=box];
    check_neighbors [label="Check if Neighbors are Better", shape=diamond];
    update_best [label="Update Best Neighbor", shape=box];
    hill_climbing [label="Hill Climbing", shape=box];
    return [label="Return Final Solution", shape=box];
    stop [label="Stop", shape=circle];

    start -> generate_matrix;
    generate_matrix -> random_solution;
    random_solution -> calculate_path_length;
    calculate_path_length -> find_neighbors;
    find_neighbors -> check_neighbors;
    check_neighbors -> update_best [label="True"];
    update_best -> hill_climbing;
    check_neighbors -> hill_climbing [label="False"];
    hill_climbing -> find_neighbors [label="Continue Hill Climbing"];
    hill_climbing -> return;
    return -> stop;
}
